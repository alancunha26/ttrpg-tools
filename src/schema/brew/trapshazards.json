{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "trapshazards.json",
	"version": "1.3.2",
	"type": "object",
	"$defs": {
		"_trapTier": {
			"type": "integer",
			"minimum": 1,
			"maximum": 4
		},
		"_trapLevel": {
			"description": "Alternative to \"tier\" which allows for non-standard level ranges.",
			"type": "object",
			"properties": {
				"min": {
					"type": "integer"
				},
				"max": {
					"type": "integer"
				}
			}
		},
		"_trapThreat": {
			"type": "string",
			"enum": [
				"setback",
				"moderate",
				"dangerous",
				"deadly"
			]
		},
		"trap": {
			"oneOf": [
				{
					"description": "Older format, used in DMG",
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"trapHazType": {
							"type": "string",
							"description": "MAG: Magical Trap\n MECH: Mechanical Trap",
							"enum": [
								"MECH",
								"MAG"
							]
						},
						"source": {
							"$ref": "util.json#/$defs/source"
						},
						"page": {
							"$ref": "util.json#/$defs/page"
						},
						"entries": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"tier": {
							"$ref": "#/$defs/_trapTier"
						},
						"level": {
							"$ref": "#/$defs/_trapLevel"
						},
						"threat": {
							"$ref": "#/$defs/_trapThreat"
						},
						"srd": {
							"$ref": "util.json#/$defs/srd"
						},
						"legacy": {
							"$ref": "util.json#/$defs/legacy"
						},
						"hasFluff": {
							"type": "boolean"
						},
						"hasFluffImages": {
							"type": "boolean"
						},
						"fluff": {
							"$ref": "util.json#/$defs/fluffObject"
						},
						"foundryImg": {
							"$ref": "util-foundry.json#/$defs/foundryImg"
						}
					},
					"additionalProperties": false,
					"required": [
						"name",
						"trapHazType",
						"source",
						"entries"
					]
				},
				{
					"description": "XGE \"Traps Revisited\" Simple/Complex traps",
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"trapHazType": {
							"type": "string",
							"enum": [
								"SMPL",
								"CMPX"
							]
						},
						"source": {
							"$ref": "util.json#/$defs/source"
						},
						"page": {
							"$ref": "util.json#/$defs/page"
						},
						"entries": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"tier": {
							"$ref": "#/$defs/_trapTier"
						},
						"level": {
							"$ref": "#/$defs/_trapLevel"
						},
						"threat": {
							"$ref": "#/$defs/_trapThreat"
						},
						"trigger": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"initiative": {
							"oneOf": [
								{
									"type": "integer",
									"minimum": 1,
									"maximum": 3
								},
								{
									"description": "Custom initiative, for homebrew only.",
									"type": "string"
								}
							]
						},
						"initiativeNote": {
							"$ref": "entry.json"
						},
						"effect": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"eActive": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"eDynamic": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"eConstant": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"countermeasures": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"srd": {
							"$ref": "util.json#/$defs/srd"
						},
						"legacy": {
							"$ref": "util.json#/$defs/legacy"
						},
						"hasFluff": {
							"type": "boolean"
						},
						"hasFluffImages": {
							"type": "boolean"
						},
						"fluff": {
							"$ref": "util.json#/$defs/fluffObject"
						},
						"foundryImg": {
							"$ref": "util-foundry.json#/$defs/foundryImg"
						}
					},
					"additionalProperties": false,
					"required": [
						"name",
						"trapHazType",
						"source",
						"entries",
						"threat",
						"trigger",
						"countermeasures"
					]
				}
			]
		},
		"hazard": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"trapHazType": {
					"type": "string",
					"description": "ENV: Environmental Hazard\n EST: Eldritch Storm\n GEN: Generic\n WTH: Weather\n WLD: Wilderness Hazard",
					"examples": [
						"ENV",
						"EST",
						"GEN",
						"WTH",
						"WLD"
					]
				},
				"source": {
					"$ref": "util.json#/$defs/source"
				},
				"page": {
					"$ref": "util.json#/$defs/page"
				},
				"otherSources": {
					"$ref": "util.json#/$defs/otherSources"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"srd": {
					"$ref": "util.json#/$defs/srd"
				},
				"legacy": {
					"$ref": "util.json#/$defs/legacy"
				},
				"hasFluff": {
					"type": "boolean"
				},
				"hasFluffImages": {
					"type": "boolean"
				},
				"foundrySystem": {
					"$ref": "util-foundry.json#/$defs/foundrySystemObject"
				},
				"foundryFlags": {
					"$ref": "util-foundry.json#/$defs/foundryFlagsObject"
				},
				"foundryEffects": {
					"$ref": "util-foundry.json#/$defs/foundryEffectsArray"
				},
				"foundryImg": {
					"$ref": "util-foundry.json#/$defs/foundryImg"
				}
			},
			"additionalProperties": false,
			"required": [
				"name",
				"source",
				"entries"
			]
		}
	},
	"properties": {
		"trap": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/$defs/trap"
			}
		},
		"hazard": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/$defs/hazard"
			}
		}
	},
	"additionalProperties": false
}